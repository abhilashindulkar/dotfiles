[user]
    name = Abhilash Indulkar
    email = your.email@example.com
    signingkey = # (optional: your GPG/SSH key ID if signing commits)

[core]
    editor = code --wait
    autocrlf = input
    excludesfile = ~/.gitignore_global

[color]
    ui = auto

[alias]
    st = status
    co = checkout
    br = branch
    ci = commit
    cm = commit -m
    ca = commit --amend
    d = diff
    dc = diff --cached
    lg = log --oneline --decorate --graph --all
    last = log -1 HEAD
    unstage = reset HEAD --
    undo = reset --soft HEAD~1
    wipe = clean -fd
    fix = commit --fixup
    squash = rebase -i --autosquash

[diff]
    tool = vscode
[difftool "vscode"]
    cmd = code --wait --diff $LOCAL $REMOTE

[merge]
    tool = vscode
[mergetool "vscode"]
    cmd = code --wait $MERGED

[push]
    default = simple

[pull]
    rebase = false

[credential]
    helper = cache
    useHttpPath = true
